pipeline{
    agent any
    environment {
    PATH = "/opt/apache-maven-3.8.1:$PATH"
    }

    stages{
        stage("Welcome to declaritive"){
            steps{
                echo "welcome to declaritive"
            }
            
        }
        stage("Git checkout"){
            steps{
                git credentialsId: 'Github', url: 'https://github.com/sea-region/my-app'
            }                
        }
        stage("Maven build"){
        steps{
        sh "mvn clean package"
        }
        }
       
    }
}
